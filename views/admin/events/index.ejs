<%- include('../../partials/adminheader.ejs') %>
<div class="main-panel">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
    <div class="container-fluid">
      <div class="navbar-wrapper">
        <a class="navbar-brand" href="javascript:void(0)">Eventos </a>
      </div>
      <%- include('../../partials/navbar.ejs') %>
<div class="content" >
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title "></h4>
              <p class="card-category">Eventos</p>
              
            <h1></h1><a href="/admin/events/new">Adicionar Evento</a></h1>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead class=" text-primary">
                    <th>
                      ID
                    </th>
                    <th>
                      Título
                    </th>
                    <th>
                      Categoria
                    </th>
                    <th>
                        Local
                    </th>
                    <th>
                        Data
                    </th>
                    <th>
                      Ações
                    </th>
                  </thead>
                  <tbody>
                    <% event.map((evento)=>{ %>
                    <tr>
                      <td>
                        <%= evento.id %>
                      </td>
                      <td>
                        <%= evento.title %>
                      </td>
                      <td>
                        <%= evento.category %>
                      </td>
                      <td>
                        <%= evento.local %>
                      </td>
                      <td>
                        <%= evento.date %>
                      </td>
                      <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                        <a href="/admin/events/edit/<%- evento.id %>"" type="button" class="btn" style="background: #8630A0;">Editar</a>
                          <a href="/admin/events/<%- evento.id %>"  type="button" class="btn btn-secondary"  style="background: #8630A0;" >Apagar</a>
                          
                        </div>
                      </td>
                      </tr>
                   <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
       
<%- include('../../partials/footer.ejs') %>