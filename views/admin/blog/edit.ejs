<%- include('../../partials/adminheader.ejs') %>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <a class="navbar-brand" href="javascript:void(0)">Blog</a>
          </div>
          <%- include('../../partials/navbar.ejs') %>
      <!-- End Navbar -->
     
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-8">
                <div class="card">
                  <div class="card-header card-header-primary">
                    <h4 class="card-title">Blog</h4>
                   
                    <p class="card-category">Alterar Post </p>
                    
                  </div>
                  
                  <div class="card-body">
                    <form method="POST">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">Título</label>
                            <input type="text" class="form-control" name="title" value="<%= posts[0].title %>" >
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">Autor</label>
                            <input type="text" class="form-control" name="author" value="<%= posts[0].author %>" >
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">Data</label>
                            <input type="text" class="form-control" name="date" value="<%= posts[0].date %>" >
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">Data do Posts</label>
                            <input type="date" class="form-control" name="date_post" value="<%= posts[0].date_post %>" >
                          </div>
                        </div>
                      </div>
                    
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label>Descrição</label>
                            <div class="form-group">
                              <label class="bmd-label-floating"></label>
                              <textarea class="form-control" rows="2" name="description"><%= posts[0].description %></textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                     <button type="submit" class="btn btn-primary pull-right">Alterar</button>
                    <div class="clearfix"></div>
                  </form>
               
        
        
       <%- include('../../partials/footer.ejs') %>
