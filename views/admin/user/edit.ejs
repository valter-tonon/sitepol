<%- include('../../partials/adminheader.ejs') %>
<div class="main-panel">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
      <div class="container-fluid">
        <div class="navbar-wrapper">
          <a class="navbar-brand" href="javascript:void(0)">Perfil de Usuário</a>
        </div>
        <%- include('../../partials/navbar.ejs') %>
    <!-- End Navbar -->
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header card-header-primary">
                <h4 class="card-title">Editar Usuário</h4>
                <p class="card-category">Preencha os campos </p>
              </div>
              <div class="card-body">
                <form method="POST">
                  <div class="row">
                    
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="bmd-label-floating">Nome</label>
                        <input type="text" class="form-control" name="name" value="<%= user[0].name %>">
                      </div>
                    </div>
                  
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="bmd-label-floating">Email</label>
                        <input type="email" class="form-control" name="email" value="<%= user[0].email %>">
                      </div>
                    </div>
                    
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="bmd-label-floating">Senha</label>
                        <input type="password" class="form-control" name="passwd" value="<%= user[0].passwd %>">
                      </div>
                    </div>
                   
                  </div>
                  <div class="row">
                    <button type="submit" class="btn btn-primary pull-right">Editar</button>
                
                    <a href="/admin/user/users" class="btn btn-primary pull-right">Voltar para usuários</a>
                  <div class="clearfix"></div>
                </form>
              </div>
            </div>
          </div>
         
<%- include('../../partials/footer.ejs') %>